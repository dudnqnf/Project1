<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_card" >
		
        <FrameLayout 
            android:id="@+id/edit_button"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right">
            
            <TextView
	            android:id="@+id/inner_edit_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:gravity="center_vertical|center_horizontal"
				android:background="@drawable/btn_card_edit"
				android:textSize="13.5sp"
				android:text="저장"
				android:textColor="#fdb3b2" />
        </FrameLayout>
		
    </FrameLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
		android:layout_height="match_parent"
        >
    	 <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			>
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:padding="15dp" >
		        
		        <ImageView 
			        android:id="@+id/wedding_card_photo_img"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="13dp"
			        android:src="@drawable/text_cdedit_01" />
		        
				<LinearLayout
			           android:layout_width="match_parent"
			           android:layout_height="67dp"
			           android:layout_marginTop="8dp"
			           android:layout_gravity="center_horizontal"
			           android:orientation="horizontal" >
			       
				   <FrameLayout 
				       android:layout_width="1dp"
				       android:layout_height="wrap_content"
				       android:layout_marginRight="5dp"
				       android:layout_weight="1"
				       >
				       <ImageView
				           android:id="@+id/wedding_card_edit_img1"
				           android:layout_width="match_parent"
				           android:layout_height="wrap_content"
				           android:layout_marginTop="5dp"
				           android:layout_marginRight="5dp"
				           android:scaleType="fitXY"
				           android:src="@drawable/img_cdedit_photoarea" />

				       <ImageView 
				           android:layout_width="15dp"
				           android:layout_height="15dp"
				           android:layout_gravity="right|top"
				           android:src="@drawable/btn_card_close"
				           android:id="@+id/cancelImg01"
				           />
			       </FrameLayout>
			       
				   <FrameLayout 
				       android:layout_width="1dp"
				       android:layout_height="wrap_content"
				       android:layout_marginRight="5dp"
				       android:layout_weight="1"
				       >
				       <ImageView
				           android:id="@+id/wedding_card_edit_img2"
				           android:layout_width="match_parent"
				           android:layout_height="wrap_content"
				           android:layout_marginTop="5dp"
				           android:layout_marginRight="5dp"
				           android:scaleType="fitXY"
				           android:src="@drawable/img_cdedit_photoarea" />
				       <ImageView 
				           android:layout_width="15dp"
				           android:layout_height="15dp"
				           android:layout_gravity="right|top"
				           android:src="@drawable/btn_card_close"
				           android:id="@+id/cancelImg02"
				           />
			       </FrameLayout>
			       
			       <FrameLayout 
				       android:layout_width="1dp"
				       android:layout_height="wrap_content"
				       android:layout_weight="1"
				       >
				       <ImageView
				           android:id="@+id/wedding_card_edit_img3"
				           android:layout_width="match_parent"
				           android:layout_height="wrap_content"
				           android:layout_marginTop="5dp"
				           android:layout_marginRight="5dp"
				           android:scaleType="fitXY"
				           android:src="@drawable/img_cdedit_photoarea" />	
				       <ImageView 
				           android:layout_width="15dp"
				           android:layout_height="15dp"
				           android:layout_gravity="right|top"
				           android:src="@drawable/btn_card_close"
				           android:id="@+id/cancelImg03"
				           />
			    	</FrameLayout>
			    
			    </LinearLayout>
			
				<ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:layout_marginTop="11dp"
			        android:src="@drawable/text_cdedit_06" />
       	        
		        <LinearLayout 
	       	        android:layout_width="match_parent"
	       	        android:layout_height="wrap_content"
	       	        android:orientation="horizontal"
	       	        android:layout_gravity="center_horizontal"
	       	        android:layout_marginTop="8dp">
	       	        
		            <Button
				        android:id="@+id/profile_template_edit_btn"
				        android:layout_width="0dp"
				        android:layout_height="@dimen/edit_box_height"
				        android:layout_gravity="center_horizontal"
				        android:background="@drawable/img_edit_box"
				        android:singleLine="true"
				        android:gravity="center_vertical"
				        android:minHeight="1dip"
				        android:minWidth="1dip" 
				        android:layout_weight="1"
				        android:layout_marginRight="8dp"/>
		            
		            <ImageView 
		                android:id="@+id/template_btn"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:src="@drawable/btn_template"/>
		            
		        </LinearLayout>

		        <Button
		            android:id="@+id/template_gallery_btn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Button" />
				
			    <ImageView
			        android:id="@+id/profile_edit_name_img"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="11dp"
			        android:src="@drawable/text_cdedit_02" />
			
			    <LinearLayout
			           android:layout_width="match_parent"
			           android:layout_height="43dp"
			           android:layout_marginTop="8dp"
			           android:layout_gravity="center_horizontal"
			           android:orientation="horizontal" >
			       
			    	<EditText
				        android:id="@+id/profile_edit_name1"
				        android:layout_width="1dp"
				        android:layout_height="@dimen/edit_box_height"
				        android:layout_marginRight="8dp"
				        android:layout_weight="1"
				        android:ems="12"
				        android:gravity="center_vertical"
				        android:background="@drawable/img_edit_box"/>
		
			       	<EditText
				        android:id="@+id/profile_edit_name2"
				        android:layout_width="1dp"
				        android:layout_height="@dimen/edit_box_height"
				        android:layout_weight="1"
				        android:ems="12"
				        android:gravity="center_vertical"
				        android:background="@drawable/img_edit_box"/>
			       	
			    </LinearLayout>
			
			  	<ImageView
			        android:id="@+id/profile_edit_place_img"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="11dp"
			        android:src="@drawable/text_cdedit_03" />
			  	
			  	<LinearLayout 
			  	    android:layout_width="match_parent"
			  	    android:layout_height="43dp"
			  	    android:layout_marginTop="8dp"
			  	    android:orientation="horizontal">
			  	    
			  	    <EditText 
				  	    android:id="@+id/profile_edit_place"
				  	    android:layout_width="0dp"
				        android:layout_height="@dimen/edit_box_height"
				  	   	android:layout_weight="1"
				  	   	android:ems="12"
				        android:background="@drawable/img_edit_box"
				        android:singleLine="true"/>
			
			    	<Button 
				        android:id="@+id/profile_naver_map"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:layout_marginLeft="8dp"
				        android:background="@drawable/btn_map_make"/>
			    	
			  	</LinearLayout>
			  	
			  	<ImageView 
			  	    android:id="@+id/profile_edit_date_img"
			  	    android:layout_width="wrap_content"
			  	    android:layout_height="wrap_content"
			  	    android:layout_marginTop="11dp"
			  	    android:src="@drawable/text_cdedit_04"/>
			  	
			  	<LinearLayout 
			  	    android:layout_width="match_parent"
			  	    android:layout_height="43dp"
			  	    android:layout_marginTop="8dp"
			  	    android:orientation="horizontal">
			  	    
			  	    <TextView
				        android:id="@+id/profile_edit_date"
				        android:layout_width="1dp"
				        android:layout_height="@dimen/edit_box_height"
				        android:layout_weight="1"
				        android:ems="12"
				        android:gravity="center_vertical"
				        android:background="@drawable/img_edit_box"
				        android:layout_marginRight="8dp"/>
			
			    	<TextView
				        android:id="@+id/profile_edit_time"
				        android:layout_width="1dp"
				        android:layout_height="@dimen/edit_box_height"
				        android:layout_weight="1"
				        android:ems="12"
				        android:gravity="center_vertical"
				        android:background="@drawable/img_edit_box" />
			    	
			  	</LinearLayout>
				
			  	<ImageView 
			  	    android:layout_width="wrap_content"
			  	    android:layout_height="wrap_content"
			  	    android:layout_marginTop="11dp"
			  	    android:src="@drawable/text_cdedit_05"/>
			  	
			  	<RelativeLayout 
			        android:layout_width="match_parent"
				    android:layout_height="130dp"
			        >
				    <TextView
				        android:id="@+id/profile_edit_bio"
				        android:layout_width="match_parent"
				        android:layout_height="160dp"
				        android:layout_gravity="center_horizontal"
				        android:gravity="center_vertical"
				        android:maxLength="200"
				        android:layout_marginTop="8dp"
				        android:background="@drawable/img_edit_box"
				        android:ems="12"
				        android:inputType="textMultiLine"  />
				    
			    </RelativeLayout>
			  	

		
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>