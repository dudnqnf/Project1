<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:background="@drawable/list_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/row_profile_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_user_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/row_profile_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/row_profile_overtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="1시간 전"
                        android:textSize="12sp"
                        android:textColor="#000000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/row_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TextView"
                    android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/row_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="5"
            android:textColor="#000000" />
		<RelativeLayout 
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"
		    >
        	<ImageView
	            android:id="@+id/row_img_iv"
	            android:layout_width="match_parent"
	            android:layout_height="250dp"
	            android:layout_marginTop="8dp"
	            android:scaleType="centerCrop" />
        	<ImageView
	            android:id="@+id/play_button"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:layout_centerInParent="true"
	            android:src="@drawable/attached_movie_i"
	            android:scaleType="fitXY" />
		
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >
            
            <LinearLayout 
                android:id="@+id/like_cap"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <ImageView
	                android:id="@+id/row_like_btn"
	                android:layout_width="23dp"
	                android:layout_height="23dp"
	                android:layout_marginRight="4dp"
	                android:src="@drawable/icon_heart" />

	            <TextView
	                android:id="@+id/main_like_cnt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:layout_marginRight="14dp"
	                android:text=""
	                android:textColor="#000000" />
            
            </LinearLayout>

            
			<LinearLayout 
                android:id="@+id/reple_cap"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
	            
	            <ImageView
	                android:id="@+id/row_reple_btn"
	                android:layout_width="23dp"
	                android:layout_height="23dp"
	                android:layout_marginRight="4dp"
	                android:src="@drawable/icon_comment" />
	
	            <TextView
	                android:id="@+id/main_cmt_cnt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:text=""
	                android:textColor="#000000" />
            
            </LinearLayout>

            <Button
                android:id="@+id/row_share_btn"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:text="공유"
                android:visibility="gone" />
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>