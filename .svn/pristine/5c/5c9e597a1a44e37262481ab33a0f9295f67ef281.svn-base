<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/setup_bio_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/divide_line"/>
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/bio_text01"/>

	<RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="130dp"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
	    android:layout_gravity="center_horizontal"
        >
        
	    <EditText
	       android:id="@+id/setup_bio_edittext"
	       android:layout_width="wrap_content"
	       android:layout_height="130dp"
	       android:layout_gravity="center_horizontal"
	       android:background="@drawable/img_edit_box"
	       android:maxLength="200"
	       android:hint="@string/default_bio" />
	
	 	<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/lengthText"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="4dp"
	        android:layout_marginBottom="4dp"
	        android:textColor="#cccccc"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
	        android:background="@drawable/final_repl_input03"
	        />
	
    </RelativeLayout>
    
	<Button
	        android:id="@+id/setup_bio_confirm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:minHeight="1dp"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="8dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/btn_small_confirm" />

</LinearLayout>