<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/intro_background">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="70dp">
        
        <ImageView 
            android:id="@+id/intro_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/intro_facebook"
            android:layout_gravity="center_horizontal"/>
        
        <com.kakao.widget.LoginButton
	        android:id="@+id/com_kakao_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/intro_kakao"/>
        
        <Button 
            android:id="@+id/intro_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:background="@drawable/intro_google"/>
        
        <Button 
            android:id="@+id/intro_naver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:background="@drawable/intro_naver"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView 
                android:id="@+id/intro_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/intro_join"
                android:layout_marginRight="15dp"/>
            <ImageView 
                android:id="@+id/intro_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/intro_login"/>
        </LinearLayout>
    </LinearLayout>
    

</FrameLayout>
