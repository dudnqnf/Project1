<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true" >
		
    	<FrameLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:background="@drawable/back_add_top">
    	    
    	    <Button
            android:id="@+id/room_write_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/btn_add_room" />
    	    
    	</FrameLayout>

        <ImageView
            android:id="@+id/add_weddingroom_textmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
			android:src="@drawable/text_add_room" />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_box_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:background="@drawable/img_edit_box">
            
            <EditText
	            android:id="@+id/find_weddingid"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_gravity="center_vertical"
	            android:layout_weight="1"
	            android:background="@null"
	            android:hint="초대받은 웨딩ID를 입력해주세요"
	            android:singleLine="true" />
            
            <ImageView 
                android:id="@+id/weddingroom_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_add_confirm"/>
        </LinearLayout>
            

        <ImageView
            android:id="@+id/weddingroom_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/text_add_list" />

        <ListView
            android:id="@+id/room_list_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>

</LinearLayout>